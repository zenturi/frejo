{

  snow : {
    config: {
      config_path: '',
      log: 1
    }
  },

  project : {
    name : 'Frejo Test',
    version : '0.0.1',
    author : 'Darmie Akinlaja',

    app : {
      name : 'frejo_test',
      package : 'com.frejo.test',
      mobile: {
        fullscreen: false,
        orientation: 'portrait'
      }
    },

    //HAH

    build : {
     // flags:['-dce std'],
      dependencies : {
        snow : '*',
        "linc_nanovg": "*",
        "linc_yoga": "*",
        "mmvc": "*",
        "minject": "*",
        "msignal": "*",
        "actuate": "*"
      },
      
      // define opengl version
      defines : ['HXCPP_CPP11']
    }

    //files : {
      //assets : 'assets/'
    //}

  },

  if :{
    "ios || iphoneos || iphonesim || iphone || android":{
      build :{
        defines : ['opengl_es2']
      }
    },
    "desktop || mac || linux || windows":{
      build :{
        defines : ['opengl_2']
      }
    }
  }

}